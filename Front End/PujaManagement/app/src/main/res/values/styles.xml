<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Layout_Margin">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="Title_Column">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="First_Column">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Others_Column1">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Date_Button">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/date</item>
    </style>

    <style name="Date_Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/date_text</item>
        <item name="android:textSize">@dimen/text1</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="Colon_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">:</item>
        <item name="android:textSize">@dimen/text1</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

</resources>
